@model QA.ContactUs.Models.Contact
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>QA Works Contact Us Page</h1>
    <p class="lead">Forgive the untidy look of the contact us page</p>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6" style="background-color: #eeeeee; padding: 20px 10px 0px 10px; border-radius: 5px">
            @using (Html.BeginForm())
            {
                <div class="form-group row">
                    <div class="col-md-6">
                        <label>Name</label>
                        <span></span>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label>Email</label>
                        <span></span>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label>Message</label>
                        <span></span>
                    </div>
                    <div class="col-md-6">
                        @Html.TextAreaFor(model => model.Message)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <input type="submit" value="SEND" name="Send">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        @ViewBag.MessageSent
                    </div>
                </div>
            }
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>